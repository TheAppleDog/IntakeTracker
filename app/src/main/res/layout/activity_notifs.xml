<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f5f5f5"
    tools:ignore="HardCodedText"
    tools:context=".notifs">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="Notifications"
        android:textColor="@color/black"
        android:textSize="24sp"
        android:layout_marginTop="10dp"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:layout_marginTop="50dp"
        android:background="#D2CFCF"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Allow Notifications"
        android:textColor="@color/black"
        android:layout_marginStart="30dp"
        android:textSize="18sp"
        android:layout_marginTop="80dp"/>
<!--    <com.google.android.material.chip.Chip-->
<!--        android:id="@+id/chip"-->
<!--        android:layout_width="wrap_content"-->
<!--        android:layout_height="wrap_content"-->
<!--        android:layout_marginTop="120dp"/>-->

    <androidx.appcompat.widget.SwitchCompat
        android:id="@+id/switch1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:layout_marginStart="355dp"
        android:backgroundTint="#ACEDCC"
        app:thumbTint="#04A967"
        android:background="@drawable/border"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:layout_marginTop="125dp"
        android:background="#D2CFCF"/>
    <LinearLayout
        android:id="@+id/ll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        android:layout_marginTop="150dp"
        tools:ignore="Orientation">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/white"
        android:layout_marginTop="40dp"
        android:layout_marginStart="-4dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="4dp"
        app:cardMaxElevation="4dp"
        app:cardPreventCornerOverlap="true"
        app:cardUseCompatPadding="true">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:text="Breakfast"
            android:textColor="@color/black"
            android:layout_marginStart="5dp"
            android:padding="18dp"
            android:textSize="18sp"
            android:layout_marginTop="0dp"/>
        <TextView
        android:id="@+id/bftimepicker"
        android:layout_width="85dp"
        android:layout_height="35dp"
        android:text="9:00 AM"
            android:gravity="center"
        android:background="@drawable/border"
        android:textColor="@color/black"
        android:layout_marginStart="245dp"
        android:padding="8dp"
            android:textStyle="bold"
            android:textSize="14sp"
        android:layout_marginTop="15dp"/>
        <androidx.appcompat.widget.SwitchCompat
            android:id="@+id/switchbreakfast"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            android:layout_marginStart="350dp"
            android:backgroundTint="#ACEDCC"
            app:thumbTint="#04A967"
            android:background="@drawable/border"/>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="8dp"
        android:layout_marginTop="110dp"
        android:layout_marginStart="-415dp"
        app:cardElevation="4dp"
        app:cardMaxElevation="4dp"
        app:cardPreventCornerOverlap="true"
        app:cardUseCompatPadding="true">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:text="Lunch"
            android:textColor="@color/black"
            android:layout_marginStart="5dp"
            android:padding="18dp"
            android:textSize="18sp"
            android:layout_marginTop="0dp"/>
        <TextView
            android:id="@+id/lunchtimepicker"
            android:layout_width="85dp"
            android:layout_height="35dp"
            android:text="1:00 PM"
            android:gravity="center"
            android:background="@drawable/border"
            android:textColor="@color/black"
            android:layout_marginStart="245dp"
            android:padding="8dp"
            android:textStyle="bold"
            android:textSize="14sp"
            android:layout_marginTop="15dp"/>
        <androidx.appcompat.widget.SwitchCompat
            android:id="@+id/switchlunch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            android:layout_marginStart="350dp"
            android:backgroundTint="#ACEDCC"
            app:thumbTint="#04A967"
            android:background="@drawable/border"/>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="180dp"
        android:layout_marginStart="-415dp"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="8dp"
        app:cardElevation="4dp"
        app:cardMaxElevation="4dp"
        app:cardPreventCornerOverlap="true"
        app:cardUseCompatPadding="true">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:text="Snacks"
            android:textColor="@color/black"
            android:layout_marginStart="5dp"
            android:padding="18dp"
            android:textSize="18sp"
            android:layout_marginTop="0dp"/>
        <TextView
            android:id="@+id/snackstimepicker"
            android:layout_width="85dp"
            android:layout_height="35dp"
            android:gravity="center"
            android:text="5:00 PM"
            android:background="@drawable/border"
            android:textColor="@color/black"
            android:layout_marginStart="245dp"
            android:padding="8dp"
            android:textStyle="bold"
            android:textSize="14sp"
            android:layout_marginTop="15dp"/>
        <androidx.appcompat.widget.SwitchCompat
            android:id="@+id/switchsnacks"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            android:layout_marginStart="350dp"
            android:backgroundTint="#ACEDCC"
            app:thumbTint="#04A967"
            android:background="@drawable/border"/>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="250dp"
        android:layout_marginStart="-415dp"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="8dp"
        app:cardElevation="4dp"
        app:cardMaxElevation="4dp"
        app:cardPreventCornerOverlap="true"
        app:cardUseCompatPadding="true">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:text="Dinner"
            android:textColor="@color/black"
            android:layout_marginStart="5dp"
            android:padding="18dp"
            android:textSize="18sp"
            android:layout_marginTop="0dp"/>
        <TextView
            android:id="@+id/dinetimepicker"
            android:layout_width="85dp"
            android:layout_height="35dp"
            android:gravity="center"
            android:text="8:30 PM"
            android:background="@drawable/border"
            android:textColor="@color/black"
            android:layout_marginStart="245dp"
            android:padding="8dp"
            android:textStyle="bold"
            android:textSize="14sp"
            android:layout_marginTop="15dp"/>
        <androidx.appcompat.widget.SwitchCompat
            android:id="@+id/switchdinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            android:layout_marginStart="350dp"
            android:backgroundTint="#ACEDCC"
            app:thumbTint="#04A967"
            android:background="@drawable/border"/>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="320dp"
        android:layout_marginStart="-415dp"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="8dp"
        app:cardElevation="4dp"
        app:cardMaxElevation="4dp"
        app:cardPreventCornerOverlap="true"
        app:cardUseCompatPadding="true">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:text="Exercise"
            android:textColor="@color/black"
            android:layout_marginStart="5dp"
            android:padding="18dp"
            android:textSize="18sp"
            android:layout_marginTop="0dp"/>
        <TextView
            android:id="@+id/extimepicker"
            android:layout_width="85dp"
            android:layout_height="35dp"
            android:text="6:00 AM"
            android:gravity="center"
            android:background="@drawable/border"
            android:textColor="@color/black"
            android:layout_marginStart="245dp"
            android:padding="8dp"
            android:textStyle="bold"
            android:textSize="14sp"
            android:layout_marginTop="15dp"/>
        <androidx.appcompat.widget.SwitchCompat
            android:id="@+id/switchexercise"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            android:layout_marginStart="350dp"
            android:backgroundTint="#ACEDCC"
            app:thumbTint="#04A967"
            android:background="@drawable/border"/>
    </androidx.cardview.widget.CardView>
    </LinearLayout>
</RelativeLayout>